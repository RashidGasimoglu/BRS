@model Author

@{ ViewData["Title"] = "Update Author"; }

<h1 class="gradient-text">Update Author</h1>

<div class="row">
    <div class="col-md-5">
        <form asp-action="UpdateAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success mr-1"><i class="bi bi-pencil-square"></i> Save</button>
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>
