@model Author

@{ ViewData["Title"] = "Create Author"; }

<h1 class="gradient-text">Create Author</h1>


<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>



            <div class="form-group d-flex">
                <button type="submit" class="btn btn-success mr-1"><i class="bi bi-plus-circle"></i> Create</button>
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>