@model AuthorContact

@{ ViewData["Title"] = "Delete Author Contact"; }

<h1 class="gradient-text">Delete Author Contact</h1>

<h6 class="mb-3">This Author Contact will get deleted permanently</h6>
<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteAuthorContact">
            <input type="hidden" asp-for="Id" />
            @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
            {
            <div class="form-group">
                @ViewBag.Error
            </div>
            }
            <div class="form-group">
                <label class="control-label">Author</label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Author" disabled> </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" readonly/>
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" readonly/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <h6 class="mb-4">Do you still want to proceed?</h6>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-1"><i class="bi bi-trash"></i> Delete</button>
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>