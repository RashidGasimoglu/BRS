@model Book

@{ ViewData["Title"] = "Delete Book"; }

<h1 class="gradient-text">Delete Book</h1>

<h6 class="mb-3">This Book will get deleted permanently</h6>
<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteBook">
            <input type="hidden" asp-for="Id" />
            @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
            {
        <div class="form-group">
            @ViewBag.Error
        </div>}
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category" disabled> </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Publisher</label>
                <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.Publisher" disabled> </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Author</label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Author" disabled> </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <h6 class="mb-4">Do you still want to proceed?</h6>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-1"><i class="bi bi-trash"></i> Delete</button>
                <a asp-action="GetList" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>